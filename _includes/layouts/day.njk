<!DOCTYPE html>
<html {% if section %} data-current="{{ section }}" {% endif %} lang="en">
  {% include "components/head.njk" %}

  <body>
    {% include "components/header.njk" %}

    <main>
      <section>
        <div class="container">
          <div class="text">
            <h1>{{ title }}</h1>
            <img src="{{ image }}">
          </div>
        </div>
      </section>
      <section>
        <div class="container">
          <h2>Schedule</h2>
          <table>
            <tr>
              <th>Times</th>
              <th>Event</th>
              <th>Location</th>
              <th>Info</th>
            </tr>
            {% for event in events %}
            <tr>
              <th>
                {% if event.times %}
                {{ event.times | markdown | safe }}
                {% endif %}
              </th>
              <th>{{ event.title | markdown | safe }}</th>
              <th>
                {% if event.location %}
                {{ event.location | markdown | safe }}
                {% endif %}
              </th>
              <th>
                {% if event.info %}
                {{ event.info | markdown | safe }}
                {% endif %}
              </th>
            </tr>
            {% endfor %}
          </table>
        </div>
      </section>
    </main>

    {% include "components/footer.njk" %}
  </body>
</html>
