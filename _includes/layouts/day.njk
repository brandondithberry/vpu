<!DOCTYPE html>
<html {% if section %} data-current="{{ section }}" {% endif %} lang="en">
  {% include "components/head.njk" %}

  <body>
    <header>
      <div class="container">
        <div class="logo">
          <a href="{{ '/' | url }}">
            <img src="/static/img/logo-black.png" alt="logo" />
          </a>
        </div>
        <div class="menu">
          <nav>
            <ul>
              <li><a href="/content/days/july31st/index.html">July 31st</a></li>
              <li>
                <a href="/content/days/august1st/index.html">August 1st</a>
              </li>
              <li><a href="/speakers/index.html">Speakers</a></li>
              <li><a href="/partners/index.html">Partners</a></li>
            </ul>
          </nav>
        </div>
        <div class="cta">
          <a href="/getaccess/index.html"><button>Request Access</button></a>
        </div>
        <div class="menu-toggle">
          <span id="menuToggle">+</span>
        </div>
      </div>
    </header>

    <div class="mobile-menu" id="mobileMenu">
      <div class="menu">
        <a href="/content/days/july31st/index.html">July 31st</a>
        <a href="/content/days/august1st/index.html">August 1st</a>
        <a href="/speakers/index.html">Speakers</a>
        <a href="/partners/index.html">Partners</a>
      </div>
      <div class="cta">
        <a href="/getaccess/index.html"><button>Request Access</button></a>
      </div>
    </div>

    <main>
      <h1>{{ title }}</h1>
      <ul>
        {% for event in events %}
        <li>
          <strong>{{ event.title | markdown | safe }}</strong
          ><br />
          {% if event.location %}Location: {{ event.location | markdown | safe
          }}<br />{% endif %} {% if event.info %}
          {{ event.info | markdown | safe }}
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </main>

    {% include "components/footer.njk" %}
  </body>
</html>
