<!DOCTYPE html>
<html {% if section %} data-current="{{ section }}" {% endif %} lang="en">
  {% include "components/head.njk" %}

  <body>
    {% include "components/header.njk" %}

    <main>
      <section>
        <div class="container">
          <div class="text">
            <h1>{{ title }}</h1>
            <img src="{{ image }}" />
          </div>
        </div>
      </section>
      <section class="schedule">
        <div class="container">
          <h2>Schedule</h2>
          <table>
            <tr class="header">
              <th>Times</th>
              <th>Event</th>
              <th>Location</th>
              <th>Info</th>
            </tr>
            {% for event in events %}
            <tr>
              <td style="background: white; color: black">
                {% if event.times %}
                <strong>{{ event.times }}</strong>
                {% endif %}
              </td>
              <td>{{ event.title }}</td>
              {% if event.location %}
              <td><span><b>Location: </b></span>{{ event.location }}</td>
              {% endif %} {% if event.info %}
              <td>
                {{ event.info | markdown | safe }}
              </td>
              {% endif %}
            </tr>
            {% endfor %}
          </table>
        </div>
      </section>
    </main>

    {% include "components/footer.njk" %}
  </body>
</html>
