---
layout: layouts/base.njk
section: day
---

<section class="page-hero">
  <div class="container">
    <h1 class="xxl-text">{{ title | safe }}</h1>
  </div>
</section>

<section class="description">
  <div class="container">
    <div class="text">
      <p>{{ description | safe }}</p>
    </div>
    <div class="image">
      <img src="{{ image | safe }}" alt="Day Image" width="400" />
      <a href="{{ invite | safe }}" target="_blank" class="lg-text">
        <button class="alt">Sign Up</button>
      </a>
    </div>
  </div>
</section>

{% set eventColors = { "Presentation": "#2e0e0e", "Demo": "#0e2e26", "Panel
Discussion": "#210e2e", "Networking": "#0e1c2e" } %}

<section class="mobile-schedule">
  <div class="container">
    <h2 class="xxl-text">Schedule</h2>
    <table>
      {% for event in events %}
      <tr style="background: {{ eventColors[event.type] }}; color: white">
        {% if event.times %}
        <td style="background: white; color: black">
          <strong>{{ event.times | safe }}</strong>
        </td>
        {% endif %} {% if event.type %}
        <td>
          <b>{{ event.type | safe }}</b>
        </td>
        {% endif %} {% if event.title %}
        <td>{{ event.title | safe }}</td>
        {% endif %} {% if event.location %}
        <td>
          <span><b>Location: </b></span>{{ event.location | safe }}
        </td>
        {% endif %} {% if event.info %}
        <td>{{ event.info | markdown | safe }}</td>
        {% endif %}
      </tr>
      {% endfor %}
    </table>
  </div>
</section>

<section class="schedule">
  <h2 class="xl-text">Schedule</h2>
  <table>
    <tr class="header">
      <th>Times</th>
      <th>Type</th>
      <th>Event</th>
      <th>Location</th>
      <th>Presenter</th>
      <th>Moderator</th>
      <th>Panelists</th>
      <th>Info</th>
    </tr>
    {% for event in events %}
    <tr style="background: {{ eventColors[event.type] }}; color: white">
      <td>{% if event.times %} {{ event.times }} {% endif %}</td>
      <td>{% if event.type %}{{ event.type }}{% endif %}</td>
      <td>{% if event.title %}{{ event.title }}{% endif %}</td>
      <td>{% if event.location %}{{ event.location }}{% endif %}</td>
      <td>{% if event.presenter %}{{ event.presenter }}{% endif %}</td>
      <td>{% if event.moderator %}{{ event.moderator }}{% endif %}</td>
      <td>{% if event.panelists %}{{ event.panelists }}{% endif %}</td>
      <td>{% if event.info %}{{ event.info | markdown }}{% endif %}</td>
    </tr>
    {% endfor %}
  </table>
</section>
