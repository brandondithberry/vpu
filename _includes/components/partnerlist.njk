<section class="partnerlist">
  <div class="grid">
    {% for partner in partnerlist | reverse %}
    <div class="partner">
      <img src="{{ partner.data.logo }}" alt="partner logo" width="180px" />
      <h3>
        {% if partner.data.title %}
        {{ partner.data.title }}
        {% else %} Untitled {% endif %}
      </h3>
      {% if partner.data.blurb %}
      <p>
        {{ partner.data.blurb }}
      </p>
      <a href="{{ partner.data.website }}" target="_blank"
        style="margin-top: 1rem;"><button class="alt">Visit Partner Site</button></a
      >
    </div>
    {% endif %} {% endfor %}
  </div>
</section>
