<section>
	{% for speaker in speakerlist | reverse %}
		<article{% if speaker.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ speaker.url | url }}">
					{% if speaker.data.title %}
						{{ speaker.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if speaker.data.summary %}
				<p>
					{{ speaker.data.summary }}
				</p>
			{% endif %}
			<p>
				<time datetime="{{ speaker.date | machineDate }}">
					<small>{{ speaker.date | readableDate }} by <a href="/authors/{{ speaker.data.author | slug }}/">{{ speaker.data.author }}</a></small>
				</time>
			</p>
			{% if speaker.data.tags %}
				<p>
					{% for tag in speaker.data.tags %}
		  			{%- if tag != "speaker" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>